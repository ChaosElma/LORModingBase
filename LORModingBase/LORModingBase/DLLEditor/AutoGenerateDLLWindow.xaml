<Window x:Class="LORModingBase.DLLEditor.AutoGenerateDLLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LORModingBase.DLLEditor"
        mc:Ignorable="d"
        Title="DLL Editor Search Window" Height="600" Width="1500" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="../Resources/icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="../Resources/MenuBg.png"/>
            </Grid.Background>
            <Label x:Name="LblHelpMessage" Content="※ 사용할 내용을 더블클릭 하세요" FontSize="15"  Style="{StaticResource StyLbl}" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="85*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="../Resources/MainBg.png"/>
            </Grid.Background>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="65*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="2" RadiusX="5" RadiusY="5" Fill="#54C3D1C2" Margin="3"/>
                    <Label x:Name="LblSearch" Grid.Row="0" Content="검색 : " FontSize="15"  Style="{StaticResource StyLbl}" HorizontalAlignment="Right"/>
                    <TextBox x:Name="TbxSearch" Grid.Column="1" Text="" ToolTip="특정 단어를 이용해서 검색합니다" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="0,0,12,0" TextChanged="TbxSearch_TextChanged"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="90*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.RowSpan="2" RadiusX="5" RadiusY="5" Fill="#54C3D1C2" Margin="3"/>
                    <Label x:Name="LblSearchType" Grid.Row="0" Content="검색 유형" FontSize="15"  Style="{StaticResource StyLbl}"/>
                    <ListBox x:Name="LbxSearchType" Grid.Row="1"  Style="{StaticResource StyListBox}" SelectionChanged="LbxSearchType_SelectionChanged"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.RowSpan="2" RadiusX="5" RadiusY="5" Fill="#54C3D1C2" Margin="3"/>
                <Label x:Name="LblSourceCodeBlocks" Grid.Row="0" Content="소스코드 블럭들" FontSize="15"  Style="{StaticResource StyLbl}"/>
                <ListBox x:Name="LbxSourceCodeBlocks" Grid.Row="1"  Style="{StaticResource StyListBox}" SelectionChanged="LbxSourceCodeBlocks_SelectionChanged"/>

                <Label x:Name="LblSourceCodeDescription" Grid.Row="2" Content="DLL 생성 옵션" FontSize="15"  Style="{StaticResource StyLbl}"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="GrdData_0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_0" Grid.Column="0" Content="&lt; 데이터 0 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_0" Grid.Column="1" Text="" ToolTip="데이터 0" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="1"  x:Name="GrdData_1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_1" Grid.Column="0" Content="&lt; 데이터 1 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_1" Grid.Column="1" Text="" ToolTip="데이터 1" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="2"  x:Name="GrdData_2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_2" Grid.Column="0" Content="&lt; 데이터 2 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_2" Grid.Column="1" Text="" ToolTip="데이터 2" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="3"  x:Name="GrdData_3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_3" Grid.Column="0" Content="&lt; 데이터 3 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_3" Grid.Column="1" Text="" ToolTip="데이터 3" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="4"  x:Name="GrdData_4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_4" Grid.Column="0" Content="&lt; 데이터 4 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_4" Grid.Column="1" Text="" ToolTip="데이터 4" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"  x:Name="GrdData_5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_5" Grid.Column="0" Content="&lt; 데이터 5 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_5" Grid.Column="1" Text="" ToolTip="데이터 5" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="1"  x:Name="GrdData_6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_6" Grid.Column="0" Content="&lt; 데이터 6 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_6" Grid.Column="1" Text="" ToolTip="데이터 6" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="2"  x:Name="GrdData_7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_7" Grid.Column="0" Content="&lt; 데이터 7 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_7" Grid.Column="1" Text="" ToolTip="데이터 7" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="3"  x:Name="GrdData_8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_8" Grid.Column="0" Content="&lt; 데이터 8 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_8" Grid.Column="1" Text="" ToolTip="데이터 8" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                        <Grid Grid.Row="4"  x:Name="GrdData_9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblData_9" Grid.Column="0" Content="&lt; 데이터 9 &gt;" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxData_9" Grid.Column="1" Text="" ToolTip="데이터 9" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC" PreviewMouseLeftButtonDown="ReflectSelections" PreviewMouseDown="HandlyInputToTextBox"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="70*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15*"/>
                                <RowDefinition Height="15*"/>
                                <RowDefinition Height="70*"/>
                                
                            </Grid.RowDefinitions>
                            <Label x:Name="LblDLLName" Grid.Row="0" Content="DLL 이름" FontSize="15"  Style="{StaticResource StyLbl}"/>
                            <TextBox x:Name="TbxDLLName" Grid.Row="1" Text="" ToolTip="DLL 이름" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" Margin="30,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FBCBCBC"/>
                            
                            <Rectangle Grid.Row="2" RadiusX="5" RadiusY="5" Fill="#548C8974" Margin="3"/>
                            <Button x:Name="BtnMakeDLLAuto" Grid.Row="2" Content="[DLL 제작하기]" ToolTip="DLL을 만듭니다" Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnMakeDLLAuto_Click"/>
                        </Grid>
                        <TextBox x:Name="TbxCompileResult" Text="" Grid.Column="1" ToolTip="컴파일 결과" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
